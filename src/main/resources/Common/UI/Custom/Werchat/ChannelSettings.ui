              Text: "MOTD:";
              Style: (TextColor: #8ea5c0, FontSize: 12);
              Anchor: (Width: 60, Height: 32);
            }
            $C.@TextField #ModMotdInput {
              @Anchor = (Width: 300, Height: 32);
              PlaceholderText: "Message shown once per login";
            }
            Group { Anchor: (Width: 8); }
            TextButton #ModSetMotdButton {
              Text: "Set MOTD";
              Anchor: (Width: 118, Height: 34);
              Style: $W.@PrimaryButtonStyle;
            }
            Group { Anchor: (Width: 8); }
            TextButton #ModClearMotdButton {
              Text: "Clear MOTD";
              Anchor: (Width: 118, Height: 34);
              Style: $W.@SecondaryButtonStyle;
            }
          }

          Group {
            LayoutMode: Left;
            Anchor: (Height: 40, Left: 0, Right: 0);
            Padding: (Bottom: 8);

            Group { Anchor: (Width: 60, Height: 32); }
            $C.@CheckBox #ModMotdEnabledCheck {
              Value: false;
              Anchor: (Width: 24, Height: 24);
            }
            Group { Anchor: (Width: 10); }
            Label {
              Text: "MOTD Enabled";
              Style: (TextColor: #d8e3f0, FontSize: 13, VerticalAlignment: Center);
              Anchor: (Width: 180, Height: 24);
            }
          }

          Group {
            LayoutMode: Left;
            Anchor: (Height: 44, Left: 0, Right: 0);
            Padding: (Bottom: 8);

            Label {
              Text: "Distance:";
              Style: (TextColor: #8ea5c0, FontSize: 12);
              Anchor: (Width: 60, Height: 32);
            }

            $C.@DropdownBox #ModDistanceDropdown {
              @Anchor = (Width: 220, Height: 32);
              Value: "100";

              DropdownEntry { Value: "0"; Text: "Global (0)"; }
              DropdownEntry { Value: "25"; Text: "25 blocks"; }
              DropdownEntry { Value: "50"; Text: "50 blocks"; }
              DropdownEntry { Value: "100"; Text: "100 blocks"; }
              DropdownEntry { Value: "150"; Text: "150 blocks"; }
              DropdownEntry { Value: "250"; Text: "250 blocks"; }
              DropdownEntry { Value: "500"; Text: "500 blocks"; }
              DropdownEntry { Value: "custom"; Text: "Custom (use field below)"; }
            }
            Group { Anchor: (Width: 8); }
            TextButton #ModSetDistanceButton {
              Text: "Set Preset";
              Anchor: (Width: 124, Height: 34);
              Style: $W.@PrimaryButtonStyle;
            }
          }

          Group {
            LayoutMode: Left;
            Anchor: (Height: 44, Left: 0, Right: 0);
            Padding: (Bottom: 8);

            Label {
              Text: "Password:";
              Style: (TextColor: #8ea5c0, FontSize: 12);
              Anchor: (Width: 60, Height: 32);
            }
            $C.@TextField #ModPasswordInput {
              @Anchor = (Width: 220, Height: 32);
              PlaceholderText: "Leave blank to keep";
            }
            Group { Anchor: (Width: 8); }
            TextButton #ModSetPasswordButton {
              Text: "Set Password";
              Anchor: (Width: 136, Height: 34);
              Style: $W.@PrimaryButtonStyle;
            }
            Group { Anchor: (Width: 8); }
            TextButton #ModClearPasswordButton {
              Text: "Clear Password";
              Anchor: (Width: 136, Height: 34);
              Style: $W.@SecondaryButtonStyle;
            }
          }

          Group {
            LayoutMode: Left;
            Anchor: (Height: 44, Left: 0, Right: 0);
            Padding: (Bottom: 8);

            Label {
              Text: "Tag:";
              Style: (TextColor: #8ea5c0, FontSize: 12);
              Anchor: (Width: 44, Height: 32);
            }
            ColorPickerDropdownBox #ModTagColorPicker {
              Anchor: (Width: 34, Height: 32);
              Style: $C.@DefaultColorPickerDropdownBoxStyle;
              Color: #ffffff;
              TooltipText: "Pick the channel tag color";
              TextTooltipStyle: $C.@DefaultTextTooltipStyle;
            }
            Group { Anchor: (Width: 8); }
            TextButton #ModSetTagColorButton {
              Text: "Apply Tag";
              Anchor: (Width: 120, Height: 34);
              Style: $W.@PrimaryButtonStyle;
            }
          }

          Group {
            LayoutMode: Left;
            Anchor: (Height: 44, Left: 0, Right: 0);
            Padding: (Bottom: 8);

            Label {
              Text: "Text:";
              Style: (TextColor: #8ea5c0, FontSize: 12);
              Anchor: (Width: 44, Height: 32);
            }
            ColorPickerDropdownBox #ModTextColorPicker {
              Anchor: (Width: 34, Height: 32);
              Style: $C.@DefaultColorPickerDropdownBoxStyle;
              Color: #ffffff;
              TooltipText: "Pick the channel text color";
              TextTooltipStyle: $C.@DefaultTextTooltipStyle;
            }
            Group { Anchor: (Width: 8); }
            TextButton #ModSetTextColorButton {
              Text: "Apply Text";
              Anchor: (Width: 120, Height: 34);
              Style: $W.@PrimaryButtonStyle;
            }
            Group { Anchor: (Width: 8); }
            TextButton #ModClearTextColorButton {
              Text: "Reset Text";
              Anchor: (Width: 116, Height: 34);
              Style: $W.@SecondaryButtonStyle;
            }
          }

          Group {
            LayoutMode: Left;
            Anchor: (Height: 44, Left: 0, Right: 0);
            Padding: (Bottom: 8);

            Label {
              Text: "Custom Distance:";
              Style: (TextColor: #8ea5c0, FontSize: 12);
              Anchor: (Width: 100, Height: 32);
            }
            $C.@TextField #ModDistanceInput {
              @Anchor = (Width: 104, Height: 32);
              PlaceholderText: "0 = global";
            }
            Group { Anchor: (Width: 8); }
            TextButton #ModSetCustomDistanceButton {
              Text: "Set Custom";
              Anchor: (Width: 128, Height: 34);
              Style: $W.@PrimaryButtonStyle;
            }
          }
        }

        Group #ModerationListModalBackdrop {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          LayoutMode: Top;
          Padding: (Top: 42, Left: 130, Right: 130, Bottom: 78);
          Background: (Color: #08101a);
          Visible: false;

          Group #ModerationListModalCard {
            Anchor: (Height: 370, Left: 0, Right: 0);
            LayoutMode: Top;
            Padding: (Full: 14);
            Background: (Color: #0f1f33);

            Label #ModerationListModalTitle {
              Text: "Manage Entries";
              Anchor: (Height: 28, Left: 0, Right: 0);
              Style: (FontSize: 20, TextColor: #ffffff, RenderBold: true);
            }

            Label #ModerationListModalSubtitle {
              Text: "Review and update this list.";
              Anchor: (Height: 24, Left: 0, Right: 0);
              Style: (TextColor: #9eb3cc, FontSize: 13);
              Padding: (Bottom: 8);
            }

            Group #ModerationListRowsWrap {
              FlexWeight: 1;
              Anchor: (Left: 0, Right: 0);
              LayoutMode: TopScrolling;
              ScrollbarStyle: $C.@DefaultExtraSpacingScrollbarStyle;
              Padding: (Right: 8);
              Background: (Color: #0a1627);

              Group #ModerationListModalRows {
                LayoutMode: Top;
                Anchor: (Left: 0, Right: 0);
                Padding: (Top: 8, Left: 8, Right: 8, Bottom: 8);
              }

              Label #ModerationListModalEmptyLabel {
                Text: "No entries.";
                Style: (TextColor: #8ea5c0, FontSize: 13);
                Padding: (Top: 8, Left: 8);
                Visible: false;
              }
            }

            Group {
              Anchor: (Height: 42, Left: 0, Right: 0);
              LayoutMode: Left;
              Padding: (Top: 10);

              Group { FlexWeight: 1; }
              TextButton #ModerationListModalCloseButton {
                Text: "Close";
                Anchor: (Width: 120, Height: 34);
                Style: $W.@SecondaryButtonStyle;
              }
            }
          }
        }
      }

      Group {
        Anchor: (Height: 28, Left: 0, Right: 0);
        Background: (Color: #0e1929);
        Padding: (Left: 14, Right: 14, Top: 6, Bottom: 6);

        Label #FooterMessage {
          Text: "Ready.";
          Style: (TextColor: #8fa8c3, FontSize: 12);
        }
      }
    }
  }
}

$C.@BackButton {}

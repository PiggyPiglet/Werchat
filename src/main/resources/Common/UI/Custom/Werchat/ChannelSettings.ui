$C = "../Common.ui";
$W = "WerchatStyles.ui";

$C.@DecoratedContainer {
  Anchor: (Width: 940, Height: 690);

  #Title {
      Group #Header {
        Anchor: (Height: 44, Left: 0, Right: 0);
        LayoutMode: Left;
        Padding: (Left: 14, Right: 14, Top: 5, Bottom: 5);

      Group {
        Anchor: (Width: 104);
      }

      Group {
        LayoutMode: Top;
        FlexWeight: 1;
        Label {
          Text: "Werchat Settings";
          Anchor: (Height: 34, Left: 0, Right: 0);
          Style: (
            TextColor: #dfe8f6,
            FontSize: 18,
            RenderBold: true,
            HorizontalAlignment: Center,
            VerticalAlignment: Center
          );
        }
      }

      Group {
        Anchor: (Width: 104);
      }
    }
  }

  #Content {
    Group {
      Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
      LayoutMode: Top;
      Background: (Color: #0b1420);

      Group #TopTabs {
        Anchor: (Height: 54, Left: 0, Right: 0);
        LayoutMode: Left;
        Padding: (Left: 12, Right: 12, Top: 10, Bottom: 10);
        Background: (Color: #0f1f33);

        TextButton #TabMainButton {
          Text: "Main";
          Anchor: (Width: 132, Height: 34);
          Style: $W.@TabButtonStyle;
        }
        Group { Anchor: (Width: 6); }

        TextButton #TabChannelsButton {
          Text: "Channels";
          Anchor: (Width: 132, Height: 34);
          Style: $W.@TabButtonStyle;
        }

        Group {
          FlexWeight: 1;
        }

        TextButton #RefreshButton {
          Text: "Refresh";
          Anchor: (Width: 116, Height: 34);
          Style: $W.@SecondaryButtonStyle;
        }
      }

      Group #ModeratorTabsSection {
        Anchor: (Height: 46, Left: 0, Right: 0);
        LayoutMode: Top;
        Padding: (Left: 12, Right: 12, Top: 6, Bottom: 6);
        Background: (Color: #0e1929);

        Group {
          LayoutMode: Left;
          Anchor: (Left: 0, Right: 0, Height: 32);

          Group { FlexWeight: 1; }

          Group #ModeratorTabsInline {
            LayoutMode: Left;
            Anchor: (Height: 32);
            Label #ModeratorTabsLabel {
              Text: "Moderator Tabs";
              Style: (TextColor: #8ea5c0, FontSize: 13, HorizontalAlignment: Start, VerticalAlignment: Center);
              Anchor: (Width: 132, Height: 30);
            }

            Group {
              Anchor: (Width: 8);
            }

            $C.@DropdownBox #ModeratorTabsDropdown {
              @Anchor = (Width: 240);
              Value: "";
            }

            Group {
              Anchor: (Width: 8);
            }

            TextButton #ModeratorTabsOpenButton {
              Text: "Open";
              Anchor: (Width: 84, Height: 30);
              Style: $W.@SecondaryButtonStyle;
            }

            Group {
              Anchor: (Width: 8);
            }

            Label #ModeratorTabsEmptyLabel {
              Text: "No moderated channels.";
              Style: (TextColor: #7389a3, FontSize: 12, HorizontalAlignment: Start, VerticalAlignment: Center);
              Anchor: (Width: 220, Height: 30);
              Visible: false;
            }
          }

          Group { FlexWeight: 1; }
        }
      }

      Group #StatusBanner {
        Anchor: (Height: 30, Left: 0, Right: 0);
        LayoutMode: Left;
        Padding: (Left: 12, Right: 12, Top: 6, Bottom: 6);
        Background: (Color: #121f31);
        Visible: false;

        Label #StatusBannerMessage {
          Text: "";
          Style: (TextColor: #d8e3f0, FontSize: 12, RenderBold: true);
          Anchor: (Left: 0, Right: 0, Height: 18);
        }
      }

      Group #Body {
        FlexWeight: 1;
        Anchor: (Left: 0, Right: 0);
        Padding: (Left: 14, Right: 14, Top: 12, Bottom: 12);
        Background: (Color: #0b1420);

        Group #MainPanel {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          LayoutMode: TopScrolling;
          ScrollbarStyle: $C.@DefaultExtraSpacingScrollbarStyle;
          Padding: (Right: 8);
          Visible: true;

          Label {
            Text: "Profile";
            Style: (FontSize: 20, TextColor: #ffffff, RenderBold: true);
          }

          Label {
            Text: "Swap your focused channel and personalize nickname/message styling.";
            Style: (TextColor: #9eb3cc, FontSize: 13);
            Padding: (Top: 2, Bottom: 8);
          }

          $C.@SimpleContainer {
            Anchor: (Height: 1080);
            Padding: (Full: 14);

            Group {
              LayoutMode: Top;

              Label {
                Text: "Display Name";
                Style: (TextColor: #8ea5c0, FontSize: 12);
              }

              Group #MainDisplayNamePreview {
                LayoutMode: Left;
                Anchor: (Height: 30, Left: 0, Right: 0);
                Padding: (Bottom: 8);

                Label #MainDisplayNameStartValue {
                  Text: "-";
                  Style: (TextColor: #ffffff, FontSize: 18, RenderBold: true);
                }

                Label #MainDisplayNameEndValue {
                  Text: "";
                  Style: (TextColor: #ffffff, FontSize: 18, RenderBold: true);
                }
              }

              Label {
                Text: "Focused Channel";
                Style: (TextColor: #8ea5c0, FontSize: 12);
              }
              Label #MainFocusedChannelValue {
                Text: "-";
                Style: (TextColor: #ffffff, FontSize: 16);
                Padding: (Bottom: 8);
              }

              Group {
                LayoutMode: Left;
                Anchor: (Height: 44, Left: 0, Right: 0);
                Padding: (Bottom: 8);

                $C.@DropdownBox #MainFocusDropdown {
                  @Anchor = (Width: 260);
                  Value: "Global";
                }
                Group { Anchor: (Width: 8); }

                TextButton #MainSetFocusButton {
                  Text: "Set Focus";
                  Anchor: (Width: 120, Height: 34);
                  Style: $W.@PrimaryButtonStyle;
                }
              }

              Group #MainFocusInfo {
                Anchor: (Left: 0, Right: 0);
                LayoutMode: Top;
                Padding: (Bottom: 8);

                Label {
                  Text: "Your Joined Channels";
                  Style: (TextColor: #8ea5c0, FontSize: 12);
                  Padding: (Top: 2);
                }
                Label #MainRecentChannelsValue {
                  Text: "-";
                  Style: (TextColor: #9eb3cc, FontSize: 12);
                  Padding: (Bottom: 6);
                }

                Group {
                  LayoutMode: Left;
                  Anchor: (Height: 34, Left: 0, Right: 0);

                  TextButton #MainQuickChannelsButton {
                    Text: "Open Channels";
                    Anchor: (Width: 142, Height: 32);
                    Style: $W.@SecondaryButtonStyle;
                  }
                }

                Label {
                  Text: "Online in Selected";
                  Style: (TextColor: #8ea5c0, FontSize: 12);
                  Padding: (Top: 2);
                }
                Group #MainSelectedMembersBlock {
                  LayoutMode: Top;
                  Anchor: (Left: 0, Right: 0);

                  Label #MainSelectedMembersSummary {
                    Text: "0 online";
                    Style: (TextColor: #9eb3cc, FontSize: 12);
                  }
                  Label #MainSelectedMember1 {
                    Text: "-";
                    Style: (TextColor: #ffffff, FontSize: 12);
                    Visible: false;
                  }
                  Label #MainSelectedMember2 {
                    Text: "-";
                    Style: (TextColor: #ffffff, FontSize: 12);
                    Visible: false;
                  }
                  Label #MainSelectedMember3 {
                    Text: "-";
                    Style: (TextColor: #ffffff, FontSize: 12);
                    Visible: false;
                  }
                  Label #MainSelectedMember4 {
                    Text: "-";
                    Style: (TextColor: #ffffff, FontSize: 12);
                    Visible: false;
                  }
                  Label #MainSelectedMember5 {
                    Text: "-";
                    Style: (TextColor: #ffffff, FontSize: 12);
                    Visible: false;
                  }
                  Label #MainSelectedMembersMore {
                    Text: "";
                    Style: (TextColor: #8ea5c0, FontSize: 12);
                    Visible: false;
                  }
                }
              }

              Label {
                Text: "Joined Channels";
                Style: (TextColor: #8ea5c0, FontSize: 12);
              }
              Label #MainJoinedCountValue {
                Text: "0";
                Style: (TextColor: #ffffff, FontSize: 16);
                Padding: (Bottom: 10);
              }

              Group {
                Anchor: (Height: 1, Left: 0, Right: 0);
                Background: (Color: #2b3f58);
              }

              Label {
                Text: "Nickname";
                Style: (TextColor: #8ea5c0, FontSize: 12);
                Padding: (Top: 10);
              }
              Label #MainNicknameValue {
                Text: "Not set";
                Style: (TextColor: #ffffff, FontSize: 16);
                Padding: (Bottom: 8);
              }

              Group {
                LayoutMode: Left;
                Anchor: (Height: 44, Left: 0, Right: 0);
                Padding: (Bottom: 8);

                $C.@TextField #MainNickInput {
                  @Anchor = (Width: 260, Height: 32);
                  PlaceholderText: "Set nickname";
                }
                Group { Anchor: (Width: 8); }

                TextButton #MainSetNickButton {
                  Text: "Save Nickname";
                  Anchor: (Width: 142, Height: 34);
                  Style: $W.@PrimaryButtonStyle;
                }
                Group { Anchor: (Width: 8); }

                TextButton #MainClearNickButton {
                  Text: "Reset Nickname";
                  Anchor: (Width: 150, Height: 34);
                  Style: $W.@SecondaryButtonStyle;
                }
              }

              Label {
                Text: "Nickname Color";
                Style: (TextColor: #8ea5c0, FontSize: 12);
              }
              Label #MainNickColorValue {
                Text: "Default";
                Style: (TextColor: #ffffff, FontSize: 16);
                Padding: (Bottom: 8);
              }

              Group {
                LayoutMode: Left;
                Anchor: (Height: 44, Left: 0, Right: 0);
                Padding: (Bottom: 8);

                Label {
                  Text: "Start";
                  Style: (TextColor: #8ea5c0, FontSize: 12);
                  Anchor: (Width: 42, Height: 32);
                }
                ColorPickerDropdownBox #MainNickStartColorPicker {
                  Anchor: (Width: 34, Height: 32);
                  Style: $C.@DefaultColorPickerDropdownBoxStyle;
                  Color: #ffffff;
                }
                Group { Anchor: (Width: 10); }
                Label {
                  Text: "End";
                  Style: (TextColor: #8ea5c0, FontSize: 12);
                  Anchor: (Width: 34, Height: 32);
                }
                ColorPickerDropdownBox #MainNickEndColorPicker {
                  Anchor: (Width: 34, Height: 32);
                  Style: $C.@DefaultColorPickerDropdownBoxStyle;
                  Color: #ffffff;
                }
                Group { Anchor: (Width: 10); }
                TextButton #MainApplyNickColorButton {
                  Text: "Apply Solid";
                  Anchor: (Width: 114, Height: 34);
                  Style: $W.@PrimaryButtonStyle;
                }
                Group { Anchor: (Width: 8); }
                TextButton #MainApplyNickGradientButton {
                  Text: "Apply Gradient";
                  Anchor: (Width: 132, Height: 34);
                  Style: $W.@PrimaryButtonStyle;
                }
                Group { Anchor: (Width: 8); }
                TextButton #MainClearNickColorButton {
                  Text: "Reset";
                  Anchor: (Width: 84, Height: 34);
                  Style: $W.@SecondaryButtonStyle;
                }
              }

              Label {
                Text: "Message Color";
                Style: (TextColor: #8ea5c0, FontSize: 12);
              }
              Label #MainMsgColorValue {
                Text: "Default";
                Style: (TextColor: #ffffff, FontSize: 16);
                Padding: (Bottom: 8);
              }

              Label {
                Text: "Message Preview";
                Style: (TextColor: #8ea5c0, FontSize: 12);
              }
              Label #MainMsgPreviewValue {
                Text: "Preview message";
                Style: (TextColor: #ffffff, FontSize: 16, RenderBold: true);
                Padding: (Bottom: 8);
              }

              Group {
                LayoutMode: Left;
                Anchor: (Height: 44, Left: 0, Right: 0);
                Padding: (Bottom: 8);

                Label {
                  Text: "Start";
                  Style: (TextColor: #8ea5c0, FontSize: 12);
                  Anchor: (Width: 42, Height: 32);
                }
                ColorPickerDropdownBox #MainMsgStartColorPicker {
                  Anchor: (Width: 34, Height: 32);
                  Style: $C.@DefaultColorPickerDropdownBoxStyle;
                  Color: #ffffff;
                }
                Group { Anchor: (Width: 10); }
                Label {
                  Text: "End";
                  Style: (TextColor: #8ea5c0, FontSize: 12);
                  Anchor: (Width: 34, Height: 32);
                }
                ColorPickerDropdownBox #MainMsgEndColorPicker {
                  Anchor: (Width: 34, Height: 32);
                  Style: $C.@DefaultColorPickerDropdownBoxStyle;
                  Color: #ffffff;
                }
                Group { Anchor: (Width: 10); }
                TextButton #MainApplyMsgColorButton {
                  Text: "Apply Solid";
                  Anchor: (Width: 114, Height: 34);
                  Style: $W.@PrimaryButtonStyle;
                }
                Group { Anchor: (Width: 8); }
                TextButton #MainApplyMsgGradientButton {
                  Text: "Apply Gradient";
                  Anchor: (Width: 132, Height: 34);
                  Style: $W.@PrimaryButtonStyle;
                }
                Group { Anchor: (Width: 8); }
                TextButton #MainClearMsgColorButton {
                  Text: "Reset";
                  Anchor: (Width: 84, Height: 34);
                  Style: $W.@SecondaryButtonStyle;
                }
              }

              Group {
                Anchor: (Height: 1, Left: 0, Right: 0);
                Background: (Color: #2b3f58);
                Padding: (Top: 8, Bottom: 8);
              }

              Label {
                Text: "Command Help";
                Style: (TextColor: #ffffff, FontSize: 16, RenderBold: true);
                Padding: (Top: 8, Bottom: 4);
              }

              Label {
                Text: "Only commands you have permission for are shown.";
                Style: (TextColor: #8ea5c0, FontSize: 12);
                Padding: (Bottom: 4);
              }

              Group #MainHelpCommandsWrap {
                LayoutMode: Top;
                Anchor: (Left: 0, Right: 0);
                Padding: (Bottom: 4);

                Group #MainHelpCommands {
                  LayoutMode: Top;
                  Anchor: (Left: 0, Right: 0);
                }
              }
            }
          }
        }

        Group #HelpPanel {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          LayoutMode: Top;
          Visible: false;

          Label {
            Text: "Command Help";
            Style: (FontSize: 20, TextColor: #ffffff, RenderBold: true);
          }

          Label {
            Text: "Only commands you have permission for are shown.";
            Style: (TextColor: #9eb3cc, FontSize: 13);
            Padding: (Top: 2, Bottom: 8);
          }

          Group #HelpCommandsWrap {
            FlexWeight: 1;
            Anchor: (Left: 0, Right: 0);
            LayoutMode: TopScrolling;
            ScrollbarStyle: $C.@DefaultExtraSpacingScrollbarStyle;
            Padding: (Right: 8);
            Background: (Color: #0a1627);

            Group #HelpCommands {
              LayoutMode: Top;
              Anchor: (Left: 0, Right: 0);
              Padding: (Top: 8, Left: 8, Right: 8, Bottom: 8);
            }
          }
        }

        Group #ChannelsPanel {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          LayoutMode: Top;
          Visible: true;

          Label {
            Text: "Channels";
            Style: (FontSize: 20, TextColor: #ffffff, RenderBold: true);
          }
          Label {
            Text: "Join, leave, or focus channels quickly.";
            Style: (TextColor: #9eb3cc, FontSize: 13);
            Padding: (Top: 2, Bottom: 8);
          }

          Group {
            Anchor: (Height: 1, Left: 0, Right: 0);
            Background: (Color: #2b3f58);
          }

          Group #ChannelRowsWrap {
            FlexWeight: 1;
            Anchor: (Left: 0, Right: 0);
            LayoutMode: TopScrolling;
            ScrollbarStyle: $C.@DefaultExtraSpacingScrollbarStyle;
            Padding: (Top: 8, Right: 8);

            Group #ChannelRows {
              LayoutMode: Top;
              Anchor: (Left: 0, Right: 0);
            }

            Label #ChannelsEmptyLabel {
              Text: "No channels available.";
              Style: (TextColor: #8ea5c0, FontSize: 13);
              Padding: (Top: 8);
              Visible: false;
            }
          }

          Group #JoinPasswordModalBackdrop {
            Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
            LayoutMode: Top;
            Padding: (Top: 90, Left: 170, Right: 170, Bottom: 120);
            Background: (Color: #08101a);
            Visible: false;

            Group #JoinPasswordModalCard {
              Anchor: (Height: 188, Left: 0, Right: 0);
              LayoutMode: Top;
              Padding: (Full: 16);
              Background: (Color: #0f1f33);

              Label #JoinPasswordModalTitle {
                Text: "Locked Channel";
                Anchor: (Height: 28, Left: 0, Right: 0);
                Style: (FontSize: 20, TextColor: #ffffff, RenderBold: true);
              }

              Label #JoinPasswordModalSubtitle {
                Text: "Enter channel password";
                Anchor: (Height: 24, Left: 0, Right: 0);
                Style: (TextColor: #9eb3cc, FontSize: 13);
                Padding: (Bottom: 10);
              }

              $C.@TextField #JoinPasswordModalInput {
                @Anchor = (Left: 0, Right: 0, Height: 34);
                PlaceholderText: "Password";
              }

              Group {
                Anchor: (Height: 42, Left: 0, Right: 0);
                LayoutMode: Left;
                Padding: (Top: 10);

                TextButton #JoinPasswordModalConfirmButton {
                  Text: "Join";
                  Anchor: (Width: 120, Height: 34);
                  Style: $W.@PrimaryButtonStyle;
                }
                Group { Anchor: (Width: 8); }
                TextButton #JoinPasswordModalCancelButton {
                  Text: "Cancel";
                  Anchor: (Width: 120, Height: 34);
                  Style: $W.@SecondaryButtonStyle;
                }
              }
            }
          }
        }

        Group #ModeratorPanel {
          Anchor: (Left: 0, Right: 0, Top: 0, Bottom: 0);
          LayoutMode: TopScrolling;
          ScrollbarStyle: $C.@DefaultExtraSpacingScrollbarStyle;
          Padding: (Right: 10);
          Visible: false;

          Label {
            Text: "Moderator Control";
            Style: (FontSize: 20, TextColor: #ffffff, RenderBold: true);
          }
          Label {
            Text: "User moderation and channel settings for the selected moderator tab.";
            Style: (TextColor: #9eb3cc, FontSize: 13);
            Padding: (Top: 2, Bottom: 8);
          }

          $C.@SimpleContainer {
            Anchor: (Height: 248);
            Padding: (Full: 14);

            Group {
              LayoutMode: Top;

              Label {
                Text: "Managed Channel";
                Style: (TextColor: #8ea5c0, FontSize: 12);
              }
              Label #ModeratorChannelNameValue {
                Text: "-";
                Style: (TextColor: #ffffff, FontSize: 18, RenderBold: true);
                Padding: (Bottom: 8);
              }

              Label #ModeratorMemberCountValue {
                Text: "Members: 0";
                Style: (TextColor: #d8e3f0, FontSize: 13);
              }
              Label #ModeratorMutedCountValue {
                Text: "Muted: 0";
                Style: (TextColor: #d8e3f0, FontSize: 13);
              }
              Label #ModeratorBannedCountValue {
                Text: "Banned: 0";
                Style: (TextColor: #d8e3f0, FontSize: 13);
              }
              Label #ModeratorModeratorsCountValue {
                Text: "Moderators: 0";
                Style: (TextColor: #d8e3f0, FontSize: 13);
              }
              Label #ModeratorDistanceValue {
                Text: "Distance: Global";
                Style: (TextColor: #d8e3f0, FontSize: 13);
              }
              Label #ModeratorPasswordValue {
                Text: "Password: None";
                Style: (TextColor: #d8e3f0, FontSize: 13);
              }
              Label #ModeratorTagColorValue {
                Text: "Tag Color: #ffffff";
                Style: (TextColor: #d8e3f0, FontSize: 13);
              }
              Label #ModeratorTextColorValue {
                Text: "Text Color: Default";
                Style: (TextColor: #d8e3f0, FontSize: 13);
              }
              Label #ModeratorDescriptionValue {
                Text: "Description: Not set";
                Style: (TextColor: #d8e3f0, FontSize: 13);
              }
              Label #ModeratorMotdValue {
                Text: "MOTD: Not set";
                Style: (TextColor: #d8e3f0, FontSize: 13);
              }
            }
          }

          Group {
            Anchor: (Height: 1, Left: 0, Right: 0);
            Background: (Color: #2b3f58);
            Padding: (Top: 8, Bottom: 8);
          }

          Label {
            Text: "User Actions";
            Style: (TextColor: #ffffff, FontSize: 16, RenderBold: true);
            Padding: (Top: 8, Bottom: 4);
          }

          Group {
            LayoutMode: Top;
            Anchor: (Height: 76, Left: 0, Right: 0);
            Padding: (Bottom: 8);

            Group {
              LayoutMode: Left;
              Anchor: (Height: 32, Left: 0, Right: 0);

              $C.@TextField #ModTargetInput {
                @Anchor = (Width: 280, Height: 32);
                PlaceholderText: "Player name";
              }
            }

            Label #ModActionErrorMessage {
              Text: "";
              Style: (TextColor: #FF5555, FontSize: 12, RenderBold: true);
              Anchor: (Left: 0, Right: 0, Height: 16);
              Padding: (Top: 4);
              Visible: false;
            }

            Label #ModActionSuccessMessage {
              Text: "";
              Style: (TextColor: #55FF55, FontSize: 12, RenderBold: true);
              Anchor: (Left: 0, Right: 0, Height: 16);
              Padding: (Top: 2);
              Visible: false;
            }
          }

          Group {
            LayoutMode: Left;
            Anchor: (Height: 44, Left: 0, Right: 0);
            Padding: (Bottom: 6);

            TextButton #ModBanButton {
              Text: "Ban";
              Anchor: (Width: 96, Height: 34);
              Style: $W.@DangerButtonStyle;
            }
            Group { Anchor: (Width: 6); }

            TextButton #ModMuteButton {
              Text: "Mute";
              Anchor: (Width: 96, Height: 34);
              Style: $W.@SecondaryButtonStyle;
            }
            Group { Anchor: (Width: 6); }

            TextButton #ModAddModeratorButton {
              Text: "Add Moderator";
              Anchor: (Width: 136, Height: 34);
              Style: $W.@PrimaryButtonStyle;
            }
          }

          Group {
            LayoutMode: Left;
            Anchor: (Height: 44, Left: 0, Right: 0);
            Padding: (Bottom: 8);

            TextButton #ModOpenBansButton {
              Text: "Manage Bans";
              Anchor: (Width: 132, Height: 34);
              Style: $W.@SecondaryButtonStyle;
            }
            Group { Anchor: (Width: 8); }

            TextButton #ModOpenMutesButton {
              Text: "Manage Mutes";
              Anchor: (Width: 132, Height: 34);
              Style: $W.@SecondaryButtonStyle;
            }
            Group { Anchor: (Width: 8); }

            TextButton #ModOpenModeratorsButton {
              Text: "Manage Mods";
              Anchor: (Width: 132, Height: 34);
              Style: $W.@SecondaryButtonStyle;
            }
          }

